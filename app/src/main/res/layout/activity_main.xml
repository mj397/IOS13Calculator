<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/relative_layout"
        android:gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:id="@+id/rel_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="36sp"
                tools:text="45 + 123(55 + 233)"
                android:id="@+id/tv_calculations"
                android:layout_marginTop="70dp"
                android:textIsSelectable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="200dp"
                tools:text="12,545"
                android:id="@+id/tv_total"
                />


        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="13dp"
        android:gravity="center">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_clear"
            android:background="@drawable/rounded_buttons"
            android:layout_marginRight="10dp"
            android:text="Ｃ"
            android:textSize="24sp"
            android:textColor="@android:color/holo_red_light"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_per_left"
            android:background="@drawable/rounded_buttons"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="23dp"
            android:text=" ( "
            android:textColor="@color/shade_color"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_per_right"
            android:background="@drawable/rounded_buttons"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=" ) "
            android:textSize="23dp"
            android:textColor="@color/shade_color"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button_divid"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_buttons_edge"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="27dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_7"
            android:background="@drawable/rounded_buttons"
            android:layout_marginRight="10dp"
            android:text="7"
            android:textColor="@color/shade_color"
            android:textSize="23dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_8"
            android:background="@drawable/rounded_buttons"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="8"
            android:textColor="@color/shade_color"
            android:textSize="23dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_9"
            android:background="@drawable/rounded_buttons"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="9"
            android:textColor="@color/shade_color"
            android:textSize="23dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_times"
            android:background="@drawable/rounded_buttons_edge"
            android:layout_marginLeft="10dp"
            android:text="×"
            android:textColor="@color/white"
            android:textSize="28dp"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_4"
                android:background="@drawable/rounded_buttons"
                android:layout_marginRight="10dp"
                android:text="4"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_5"
                android:background="@drawable/rounded_buttons"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="5"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_6"
                android:background="@drawable/rounded_buttons"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="6"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_minus"
                android:background="@drawable/rounded_buttons_edge"
                android:layout_marginLeft="10dp"
                android:text="−"
                android:textColor="@color/white"
                android:textSize="28dp"
                style="?android:attr/borderlessButtonStyle"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="13dp"
            android:gravity="center">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_1"
                android:background="@drawable/rounded_buttons"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_2"
                android:background="@drawable/rounded_buttons"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="2"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_3"
                android:background="@drawable/rounded_buttons"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="3"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_plus"
                android:background="@drawable/rounded_buttons_edge"
                android:layout_marginLeft="10dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="28dp"
                style="?android:attr/borderlessButtonStyle"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:id="@+id/button_0"
                android:background="@drawable/rounded_buttons"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:text="0"
                android:textColor="@color/shade_color"
                android:textSize="23dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_point"
                android:background="@drawable/rounded_buttons"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=" . "
                android:textColor="@color/shade_color"
                android:textSize="40dp"
                android:gravity="center|center_vertical"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button_equal"
                android:background="@drawable/rounded_buttons_equal"
                android:text="="
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="?android:animateOnClick"
                android:layout_marginBottom="6dp"
                />


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>